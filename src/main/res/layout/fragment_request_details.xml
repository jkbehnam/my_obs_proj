<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:isScrollContainer="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tl_ok"
            android:paddingBottom="100dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tableRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:text="مشاهده"
                            android:textSize="16dp"
                            android:visibility="gone"
                            app:layout_constraintHorizontal_weight="3"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/textView12"
                            app:layout_constraintTop_toTopOf="@id/textView12" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="حسن حسن زاده"
                            android:textColor="@color/text_color_all"
                            android:textSize="16dp"
                            android:visibility="gone"
                            app:layout_constraintHorizontal_weight="2"
                            app:layout_constraintLeft_toRightOf="@id/textView13"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:gravity="right"
                    android:minHeight="@dimen/emailthread_subject_textize_with_photo_attachments">

                    <TextView
                        android:id="@+id/tv_question"
                        android:layout_width="match_parent"
android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد."
                        android:layout_height="wrap_content"
                        android:background="@drawable/q_list_back"
                        android:gravity="top|right"
                        android:minHeight="100dp"
                        android:padding="10dp"
                        android:textColor="@color/text_color_all"
                        android:textColorHint="#9F9F9F" />
                </TableRow>


                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"

                    android:layout_height="wrap_content"
                    android:text="پاسخ کاربر"
                    android:textColor="@color/text_color_all"
                    android:textSize="16dp"
                    app:layout_constraintHorizontal_weight="3"
                    app:layout_constraintLeft_toRightOf="@id/textView13"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintTop_toTopOf="parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:gravity="right"
                    android:minHeight="@dimen/emailthread_subject_textize_with_photo_attachments">

                    <TextView
                        android:id="@+id/tv_gamer_answer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/answer_edittext"
                        android:ems="10"
                        android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد."
                        android:gravity="top|right"
                        android:minHeight="100dp"
                        android:padding="10dp"
                        android:textColor="@color/text_color_all"
                        />
                </TableRow>

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"

                    android:layout_height="wrap_content"
                    android:text="توضیحات داور"
                    android:textColor="@color/text_color_all"
                    android:textSize="16dp"
                    app:layout_constraintHorizontal_weight="3"
                    app:layout_constraintLeft_toRightOf="@id/textView13"
                    app:layout_constraintRight_toRightOf="parent"

                    app:layout_constraintTop_toTopOf="parent" />

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:gravity="right"
                    android:minHeight="@dimen/emailthread_subject_textize_with_photo_attachments">

                    <EditText
                        android:id="@+id/tv_obs_answer"
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"
                        android:background="@drawable/answer_edittext"
                        android:ems="10"
                        android:gravity="top|right"
                        android:hint="اگه جوابی واسه کمک به بازیکن داری اینجا بنویس"
                        android:inputType="textMultiLine"
                        android:minHeight="100dp"
                        android:padding="10dp"
                        android:textColor="@color/text_color_all"
                        android:textColorHint="#9F9F9F" />
                </TableRow>
            </LinearLayout>
        </ScrollView>

        <TableRow
            android:id="@+id/tl_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8FFFFFFF"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="bottom"
           android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:gravity="bottom"
            tools:layout_editor_absoluteY="675dp">

            <Button
                android:id="@+id/btn_reject"

                android:layout_weight="1"
                android:layout_marginRight="15dp"
                android:background="@drawable/button_red_gradiant"
                android:layout_width="wrap_content"
                android:textColor="@color/allOkButtonTxt"
android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="25dp"

                android:layout_height="wrap_content"
                android:text="رد" />

            <Button
                android:id="@+id/btn_accept"
                android:layout_weight="1"
                android:autoSizeMaxTextSize="25dp"
                android:autoSizeTextType="uniform"
                android:layout_marginLeft="15dp"

                android:textColor="@color/allOkButtonTxt"
                android:background="@drawable/button_green_gradiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="قبول" />
        </TableRow>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>